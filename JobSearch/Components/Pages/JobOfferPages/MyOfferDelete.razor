@page "/my-offers/delete/{Id:int}"
@rendermode InteractiveServer
@using System.Security.Claims
@using JobSearch.Data
@using JobSearch.Services
@using Microsoft.AspNetCore.Authorization
@inject IJobOfferService JobOfferService
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthenticationStateProvider
@attribute [Authorize]

<PageTitle>Usuń Ofertę</PageTitle>

<div class="page-container">
    <div class="delete-card animate-fade-up">

        <div class="warning-icon">
            <i class="bi bi-exclamation-triangle-fill"></i>
        </div>

        <h1 class="card-title">Usuwanie Oferty</h1>
        <p class="card-subtitle">Tej operacji nie można cofnąć. Czy na pewno chcesz usunąć tę ofertę?</p>

        @if (jobOffer == null)
        {
            <div class="py-4">
                <div class="spinner-border text-danger" role="status"></div>
            </div>
        }
        else
        {
            <div class="offer-summary-box">
                <div class="info-row">
                    <span class="info-label">Tytuł</span>
                    <span class="info-value">@jobOffer.Title</span>
                </div>
                <div class="info-row">
                    <span class="info-label">Firma</span>
                    <span class="info-value">@jobOffer.CompanyName</span>
                </div>
                <div class="info-row">
                    <span class="info-label">Lokalizacja</span>
                    <span class="info-value">@jobOffer.Location</span>
                </div>
                <div class="info-row">
                    <span class="info-label">Data dodania</span>
                    <span class="info-value">@jobOffer.DatePosted.ToShortDateString()</span>
                </div>
                <div class="info-row">
                    <span class="info-label">Status</span>
                    <span class="info-value text-uppercase fw-bold">@jobOffer.Status</span>
                </div>
            </div>

            <div class="actions">
                <a href="/my-offers" class="btn-cancel">Anuluj</a>
                <button type="button" class="btn-delete" @onclick="DeleteOffer">
                    <i class="bi bi-trash3-fill me-2"></i> Usuń Ofertę
                </button>
            </div>
        }
    </div>
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private JobOffer? jobOffer;
    private string? currentUserId;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        currentUserId = user.FindFirstValue(ClaimTypes.NameIdentifier);

        if (string.IsNullOrEmpty(currentUserId))
        {
            NavigationManager.NavigateTo("Account/Login");
            return;
        }

        jobOffer = await JobOfferService.GetByIdAsync(Id);

        // Zabezpieczenie: tylko właściciel może usunąć swoją ofertę
        if (jobOffer == null || jobOffer.CreatedByUserId != currentUserId)
        {
            NavigationManager.NavigateTo("/my-offers");
        }
    }

    private async Task DeleteOffer()
    {
        if (jobOffer != null)
        {
            await JobOfferService.DeleteAsync(jobOffer.Id);
            NavigationManager.NavigateTo("/my-offers");
        }
    }
}