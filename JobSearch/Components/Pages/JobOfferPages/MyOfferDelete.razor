@page "/my-offers/delete/{Id:int}"
@rendermode InteractiveServer
@using System.Security.Claims
@using JobSearch.Data
@using JobSearch.Services
@using Microsoft.AspNetCore.Authorization
@inject IJobOfferService JobOfferService
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthenticationStateProvider
@attribute [Authorize]

<PageTitle>Usuń Ofertę</PageTitle>

<h1>Usuń Ofertę</h1>

<h3>Czy na pewno chcesz usunąć tę ofertę?</h3>
<hr />

@if (jobOffer == null)
{
    <p><em>Ładowanie...</em></p>
}
else
{
    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Tytuł</dt>
                <dd class="col-sm-9">@jobOffer.Title</dd>

                <dt class="col-sm-3">Firma</dt>
                <dd class="col-sm-9">@jobOffer.CompanyName</dd>

                <dt class="col-sm-3">Lokalizacja</dt>
                <dd class="col-sm-9">@jobOffer.Location</dd>

                <dt class="col-sm-3">Data dodania</dt>
                <dd class="col-sm-9">@jobOffer.DatePosted.ToShortDateString()</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@jobOffer.Status</dd>
            </dl> <div class="mt-3">
                <button type="button" class="btn btn-danger" @onclick="DeleteOffer">Potwierdź usunięcie</button>
                <a href="/my-offers" class="btn btn-secondary">Anuluj</a>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private JobOffer? jobOffer;
    private string? currentUserId;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        currentUserId = user.FindFirstValue(ClaimTypes.NameIdentifier);

        if (string.IsNullOrEmpty(currentUserId))
        {
            NavigationManager.NavigateTo("Account/Login");
            return;
        }

        jobOffer = await JobOfferService.GetByIdAsync(Id);

        // Zabezpieczenie: tylko właściciel może usunąć swoją ofertę
        if (jobOffer == null || jobOffer.CreatedByUserId != currentUserId)
        {
            NavigationManager.NavigateTo("/my-offers");
        }
    }

    private async Task DeleteOffer()
    {
        if (jobOffer != null)
        {
            await JobOfferService.DeleteAsync(jobOffer.Id);
            NavigationManager.NavigateTo("/my-offers");
        }
    }
}