@page "/my-offers"
@rendermode InteractiveServer
@using System.Security.Claims
@using JobSearch.Data
@using JobSearch.Services
@using Microsoft.AspNetCore.Authorization
@inject IJobOfferService JobOfferService
@inject AuthenticationStateProvider AuthenticationStateProvider
@attribute [Authorize]

<PageTitle>Moje Oferty Pracy</PageTitle>

<div class="page-container">
    <div class="container">

        <div class="header-section animate-fade-up">
            <h1 class="page-title">Moje Oferty</h1>
            @* ZMIANA: Przycisk w nagłówku wyświetla się tylko, gdy są oferty. Jeśli nie ma - wyświetla się ten duży poniżej *@
            @if (jobOffers != null && jobOffers.Any())
            {
                <a href="/joboffers/create" class="btn-add-new">
                    <i class="bi bi-plus-lg"></i> Dodaj Nową Ofertę
                </a>
            }
        </div>

        @if (jobOffers == null)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-light" role="status"></div>
            </div>
        }
        else if (!jobOffers.Any())
        {
            <div class="empty-state animate-fade-up delay-1">
                <i class="bi bi-folder2-open display-1 mb-3 d-block opacity-50"></i>
                <h3>Nie masz jeszcze żadnych ofert</h3>
                <p class="mb-4">Dodaj swoje pierwsze ogłoszenie i zacznij rekrutację.</p>
                <a href="/joboffers/create" class="btn-add-new">Dodaj pierwszą ofertę</a>
            </div>
        }
        else
        {
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 animate-fade-up delay-1">
                @foreach (var offer in jobOffers)
                {
                    <div class="col">
                        <div class="my-offer-card">

                            <div class="card-top">
                                <div>
                                    <h5 class="offer-title">@offer.Title</h5>
                                    <div class="offer-company">@offer.CompanyName</div>
                                </div>
                                <span class="status-badge status-@offer.Status">
                                    @offer.Status.ToString()
                                </span>
                            </div>

                            <div class="tags-container">
                                <span class="detail-tag tag-location">
                                    <i class="bi bi-geo-alt-fill"></i> @offer.Location
                                </span>

                                @if (offer.IndustryCategory.HasValue)
                                {
                                    <span class="detail-tag tag-industry">
                                        <i class="bi bi-briefcase-fill"></i> @offer.IndustryCategory
                                    </span>
                                }

                                <span class="detail-tag tag-salary">
                                    <i class="bi bi-cash-stack"></i> @offer.SalaryRange
                                </span>
                            </div>

                            @if (offer.Status == OfferStatus.Odrzucona)
                            {
                                <div class="moderation-alert mb-2">
                                    <strong><i class="bi bi-exclamation-triangle-fill"></i> Odrzucono:</strong>
                                    <a href="@($"/my-offers/rejected/{offer.Id}")" class="text-danger ms-2 fw-bold text-decoration-underline">
                                        Zobacz powód
                                    </a>
                                </div>
                            }


                            <div class="card-actions">

                                @if (offer.Status == OfferStatus.Wygasła)
                                {
                                    <button class="btn-action btn-extend" @onclick="() => ExtendOffer(offer)">
                                        <i class="bi bi-arrow-clockwise me-2"></i> Przedłuż o 3 dni
                                    </button>
                                }

                                <a href="@($"/my-offers/details/{offer.Id}")" class="btn-action btn-manage">
                                    <i class="bi bi-people-fill me-2"></i> Zarządzaj / Aplikacje
                                </a>

                                <div class="d-flex gap-2">
                                    <a href="@($"/my-offers/edit/{offer.Id}")" class="btn-action btn-edit flex-grow-1">
                                        <i class="bi bi-pencil me-2"></i> Edytuj
                                    </a>
                                    <a href="@($"/my-offers/delete/{offer.Id}")" class="btn-action btn-delete flex-grow-1">
                                        <i class="bi bi-trash me-2"></i> Usuń
                                    </a>
                                </div>
                            </div>

                            <div class="date-info">
                                Dodano: @offer.DatePosted.ToShortDateString()
                            </div>

                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

@code {
    private List<JobOffer>? jobOffers;
    private string? currentUserId;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        currentUserId = user.FindFirstValue(ClaimTypes.NameIdentifier);

        if (!string.IsNullOrEmpty(currentUserId))
        {
            await LoadOffers();
        }
    }

    private async Task LoadOffers()
    {
        if (string.IsNullOrEmpty(currentUserId)) return;
        jobOffers = await JobOfferService.GetMyOffersAsync(currentUserId);
        StateHasChanged();
    }

    private async Task ExtendOffer(JobOffer offer)
    {
        if (string.IsNullOrEmpty(currentUserId)) return;

        try
        {
            await JobOfferService.ExtendOfferAsync(offer.Id, 3, currentUserId);

            await LoadOffers();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Błąd: {ex.Message}");
        }
    }
}