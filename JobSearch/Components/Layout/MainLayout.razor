@inherits LayoutComponentBase
@using JobSearch.Components.Layout

<!-- Dynamiczne tło z kulkami -->
<div class="background-balls">
    <div class="ball"></div>
    <div class="ball"></div>
    <div class="ball"></div>
    <div class="ball"></div>
    <div class="ball"></div>

</div>

<!-- Gwiazdki -->
<div id="star-1" class="dynamic-star"></div>
<div id="star-2" class="dynamic-star"></div>
<div id="star-3" class="dynamic-star"></div>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <div style="flex-grow: 1;"></div>

            <AuthorizeView>
                <Authorized>
                    <NotificationBell @rendermode="InteractiveServer" />
                </Authorized>
            </AuthorizeView>

            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank" class="ms-3">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
